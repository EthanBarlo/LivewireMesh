{
  "name": "livewiremesh-prerender-server",
  "version": "1.0.0",
  "description": "Node.js prerender server for LivewireMesh React components",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "vite build && tsc --project tsconfig.server.json",
    "start": "node dist/server.js",
    "build:components": "vite build"
  },
  "dependencies": {
    "express": "^4.21.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^5.4.0"
  }
}
